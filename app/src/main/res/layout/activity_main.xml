<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neu_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--标题栏-->
    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@mipmap/neu_card1"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignTop="@id/Title"
                        android:layout_alignEnd="@id/Title"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/neu_about"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10">

                    <Button
                        android:id="@+id/muchCK"
                        android:layout_width="@dimen/dp_165"
                        android:layout_height="@dimen/dp_120"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_0"
                        android:background="@drawable/neu_background_card_down_bac"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="\n\n账号管理"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/neu_text_color"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="normal|bold"
                        android:typeface="serif"
                        tools:ignore="HardcodedText,SpUsage" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_42"
                        android:layout_alignStart="@id/muchCK"
                        android:layout_alignTop="@id/muchCK"
                        android:layout_alignEnd="@id/muchCK"
                        android:layout_marginTop="@dimen/dp_30"
                        app:srcCompat="@mipmap/neu_my"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/loginJd"
                        android:layout_width="@dimen/dp_165"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginStart="@dimen/dp_186"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/neu_background_card_down_bac"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="\n\n获取Cookie"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/neu_text_color"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,SpUsage" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_46"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignStart="@id/loginJd"
                        android:layout_alignTop="@id/loginJd"
                        android:layout_alignEnd="@id/loginJd"
                        android:layout_marginTop="@dimen/dp_32"
                        android:layoutDirection="ltr"
                        app:srcCompat="@mipmap/neu_ck"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6">

                    <Button
                        android:id="@+id/setting"
                        android:layout_width="@dimen/dp_165"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/neu_background_card_down_bac"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="\n\n设置"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/neu_text_color"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,SpUsage" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_31"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignStart="@id/setting"
                        android:layout_alignTop="@id/setting"
                        android:layout_alignEnd="@id/setting"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dp_34"
                        android:layoutDirection="ltr"
                        app:srcCompat="@mipmap/neu_set"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

            </LinearLayout>


        </ScrollView>

        <TextView
            android:id="@+id/githublj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/tencent"
            android:text="GitHub：WhiteFan"
            android:textAlignment="center"
            android:textColor="@color/huise"
            android:textSize="@dimen/dp_10"
            tools:ignore="HardcodedText,SpUsage" />
    </RelativeLayout>


</LinearLayout>