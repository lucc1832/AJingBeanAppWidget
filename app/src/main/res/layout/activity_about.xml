<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neu_background"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/neu_background_card_down_bac"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_0"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/tencent"
                        android:text="京豆小部件"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/tencent"
                        android:text=" lite"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/widgesblue"
                        android:textSize="@dimen/dp_20"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_26"
                        android:layout_marginStart="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/background_count_down_bac"
                        android:fontFamily="@font/tencent"
                        android:text="V1.1.3"
                        android:textColor="#827717"
                        android:textSize="@dimen/dp_14"
                        tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="一款为京东量身定制的软件，无广告，无推送，无后台的“三无”绿色应用，请大家放心使用。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_13"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:background="#65E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_2"
                        android:layout_weight="1"
                        android:text="博主："
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_13"
                        tools:ignore="HardcodedText,SpUsage" />

                    <Button
                        android:id="@+id/lucc"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/background_count_down_bac"
                        android:fontFamily="@font/tencent"
                        android:text="Lucc"
                        android:textColor="#827717"
                        android:textSize="@dimen/dp_11"
                        tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="作者：Lucc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_13"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,SpUsage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_2"
                        android:layout_weight="1"
                        android:text="博主QQ："
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_13"
                        tools:ignore="HardcodedText,SpUsage" />

                    <Button

                        android:id="@+id/github"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/background_count_down_bac"
                        android:fontFamily="@font/tencent"
                        android:text="1832649614"
                        android:textColor="#827717"
                        android:textSize="@dimen/dp_11"
                        tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_0"
                        android:layout_weight="1"
                        android:text="交流群："
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_13"
                        tools:ignore="HardcodedText,SpUsage" />

                    <Button

                        android:id="@+id/addQQGroup"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/background_count_down_bac"
                        android:fontFamily="@font/tencent"
                        android:text="972275078"
                        android:textColor="#827717"
                        android:textSize="@dimen/dp_11"
                        tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/neu_background_card_down_bac"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_0"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/tencent"
                        android:text="帮助"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        tools:ignore="HardcodedText,SpUsage" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="由于有些手机后台限制了app活动，此时要在任务管理器锁定app保持不被杀死，可在应用授权管理开启应用后台活动。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_13"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/neu_background_card_down_bac"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_0"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_3"
                        android:fontFamily="@font/tencent"
                        android:text="开源声明"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        tools:ignore="HardcodedText,SpUsage" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="Licensed under The GNU General Public License v3.0."
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_13"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:background="@drawable/neu_background_card_down_bac"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:background="#0000"
                    android:fontFamily="@font/tencent"
                    android:gravity="center"
                    android:text="更新应用版本"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>